<Page xmlns="clr-namespace:A2v10.Xaml.Report;assembly=A2v10.Xaml.Report"
		Title="I am the title">
	<Column>
		<Text Align="Right">
			Top of page (default text)
		</Text>
		<Text Style="Title" Align="Center">
			Видаткова накладна №
			<Span Content="{Bind Document.No}"/>
			від
			<Span Content="{Bind Document.Date, Format='D'}" />
		</Text>
		<Table Columns="1fr,50pt,30mm,120mm">
			<TableRow>
				<TableCell>
				</TableCell>
				<TableCell>@[Localize]</TableCell>
				<TableCell Content="{Bind Document.Date, Format='D'}"/>
				<TableCell>
					<Table ItemsSource="{Bind Document.Rows}">
						<Table.Columns>
							<TableColumn />
							<TableColumn />
							<TableColumn />
						</Table.Columns>
						<TableRow>
							<TableCell Content="in cell 1" />
							<TableCell Content="in cell 2" />
							<TableCell Content="{Bind Sum}" />
						</TableRow>
					</Table>
				</TableCell>
			</TableRow>
		</Table>
		<Table ItemsSource="{Bind Document.Rows}" Style="Details"
			   Columns="1fr,2cm,25mm,25mm,25mm">
			<Table.Header>
				<TableRow>
					<TableCell RowSpan="2" Align="Right">Entity</TableCell>
					<TableCell ColSpan="2">Qty</TableCell>
					<TableCell RowSpan="2">Price</TableCell>
					<TableCell RowSpan="2" Align="Center">Sum</TableCell>
				</TableRow>
				<TableRow>
					<TableCell />
					<TableCell>Unit</TableCell>
				</TableRow>
			</Table.Header>
			<TableRow>
				<TableCell Content="{Bind Entity.Name}"/>
				<TableCell Content="{Bind Qty}" Align="Right"/>
				<TableCell Content="{Bind Qty}"/>
				<TableCell Content="{Bind Price}"/>
				<TableCell Content="{Bind Sum}" Align="Center"/>
			</TableRow>
			<Table.Footer>
				<TableRow>
					<TableCell Content="{Bind Document.Sum}" ColSpan="4" Align="Right"/>
				</TableRow>
			</Table.Footer>
		</Table>
	</Column>
</Page>
